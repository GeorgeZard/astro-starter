---
import DefaultLayout from '../layouts/DefaultLayout.astro';
import About from '../components/About.astro';

// Using local image from assets
const imagePath = "/assets/img/about-us.jpeg";
---

<DefaultLayout title="About Component Test Page">
  <main class="container mx-auto py-8">
    <h1 class="text-3xl font-bold text-center mb-8">About Component Test</h1>
    
    <div class="mb-12">
      <h2 class="text-2xl font-bold mb-4">Default About Component</h2>
      <About />
    </div>
    
    <div class="mb-12">
      <h2 class="text-2xl font-bold mb-4">Customized About Component</h2>
      <About 
        imageSrc={imagePath}
        imageAlt="A beautiful coastal view"
        yearEstablished="SINCE 2022"
        subtitle="OUR STORY"
        title="INNOVATION AND\nQUALITY DELIVERED"
        description1="We are a dedicated team of professionals committed to delivering high-quality solutions for our clients. Our approach combines innovative thinking with meticulous execution."
        description2="Our mission is to exceed expectations on every project, building long-lasting partnerships based on trust, transparency, and exceptional results."
      />
    </div>
  </main>
</DefaultLayout>