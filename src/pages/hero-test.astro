---
import DefaultLayout from '../layouts/DefaultLayout.astro';
import Hero from '../components/Hero.astro';
---

<DefaultLayout title="Hero Component Test">
  <main>
    <!-- Default Hero (using default props) -->
    <div class="mb-20">
      <h2 class="text-2xl font-bold text-center mb-4">Default Hero</h2>
      <Hero />
    </div>

    <!-- Customized Hero with custom props -->
    <div class="mb-20">
      <h2 class="text-2xl font-bold text-center mb-4">Customized Hero</h2>
      <Hero 
        heading="COASTAL<span class='font-normal'>VIEWS</span>"
        subheading="OCEAN PARADISE"
        description="Experience the beauty of the Mediterranean coastline with our premium beachfront accommodations and world-class service."
        tagline="since 2010"
        imageUrl="https://images.unsplash.com/photo-1520342868574-5fa3804e551c?ixlib=rb-0.3.5&ixid=eyJhcHBfaWQiOjEyMDd9&s=6ff92caffcdd63681a35134a6770ed3b"
        imageAlt="Beautiful coastal view"
        testimonialQuote="An unforgettable experience with breathtaking views"
        testimonialSource="Travel & Leisure Magazine"
      />
    </div>
  </main>
</DefaultLayout>

<style>
  main {
    padding: 1rem;
  }
</style>